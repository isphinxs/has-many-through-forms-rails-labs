<h1>New Post Form</h1>
<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <h2>Categories:</h2>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name, {include_blank: false} %>
    <br>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
        <%= categories_fields.label :name %>
        <%= categories_fields.text_field :name %>
    <% end %>
    <br>
    <%= f.submit %>
<% end %>